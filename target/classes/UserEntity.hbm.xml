<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="javabeans.UserEntity" table="user" schema="dic_server">
        <id name="id">
            <column name="id" sql-type="int(11) unsigned zerofill"/>
        </id>
        <property name="user">
            <column name="user" sql-type="varchar(255)"/>
        </property>
        <property name="pwd">
            <column name="pwd" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>